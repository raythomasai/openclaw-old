# Kalshi Trading Bot - Environment Configuration

# Kalshi API (required)
KALSHI_API_KEY=b9771786-c1d5-41bc-8eee-dcdd4fb70ed8
# KALSHI_PRIVATE_KEY is loaded from kalshi-key.pem file (not inline)

# Polymarket (optional - read-only access)
POLYNETMARKET_PRIVATE_KEY=your_polymarket_private_key_here

# Demo vs Live Trading
# Set to "true" for demo mode (safe testing)
# Set to "false" for live trading with real money
KALSHI_USE_DEMO=false

# Trading Limits
MAX_TRADE_AMOUNT=25.0
MAX_DAILY_LOSS=100.0
MOMENTUM_THRESHOLD=0.05
WHALE_MIN_AMOUNT=1000.0
ARB_THRESHOLD=0.03

# Polling Intervals (seconds)
POLL_INTERVAL=30
ARB_POLL_INTERVAL=60

# Logging
LOG_LEVEL=INFO
